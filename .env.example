# Server Configuration
PORT=5000
NODE_ENV=development
APP_NAME="Website Cloner Pro"
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/website_cloner_pro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=website_cloner_pro
DB_USER=user
DB_PASSWORD=password

# Redis (for sessions, rate limiting, caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Tokens (IMPORTANT: Generate strong random keys)
JWT_ACCESS_SECRET=your-super-secret-access-key-minimum-32-characters-long-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long-change-this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption (IMPORTANT: Use exactly 32 characters for AES-256)
ENCRYPTION_KEY=your-32-char-encryption-key!!
ENCRYPTION_ALGORITHM=aes-256-gcm

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Website Cloner Pro <noreply@websitecloner.pro>"

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters-long
SESSION_NAME=wcp_session
SESSION_MAX_AGE=1800000
MAX_SESSIONS_PER_USER=3

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Security
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/zip
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# API Keys
API_KEY_EXPIRY_DAYS=30
API_KEY_LENGTH=32

# Two-Factor Authentication
TOTP_WINDOW=1
TOTP_STEP=30
BACKUP_CODES_COUNT=10
MFA_ISSUER="Website Cloner Pro"

# Logging & Monitoring
SENTRY_DSN=
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30d

# Preview Domain
PREVIEW_BASE_DOMAIN=preview.websitecloner.pro
PREVIEW_BASE_URL=https://your-domain.vercel.app
PREVIEW_EXPIRY_DAYS=30
SERVER_IP=0.0.0.0

# HaveIBeenPwned API
HIBP_API_KEY=your-haveibeenpwned-api-key

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key-minimum-32-characters-long

# Vercel Integration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_TEAM_ID=your_team_id_here

# Netlify Integration
NETLIFY_AUTH_TOKEN=your_netlify_token_here

# Claude API (for AI-powered suggestions)
ANTHROPIC_API_KEY=your_claude_api_key_here

# Performance Monitoring
LIGHTHOUSE_API_KEY=optional
